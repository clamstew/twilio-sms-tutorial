<% if ENV['TWILIO_SID'].nil? %>
<div class="alert-message error">
  <a class="close" href="#">×</a>
  <p><strong>Configuration Error!</strong> The "sid" value is not defined for <strong><%= Rails.env %></strong> in your twilio.yml file.</p>
</div>
<% end %>

<% if ENV['TWILIO_TOKEN'].nil? %>
<div class="alert-message error">
  <a class="close" href="#">×</a>
  <p><strong>Configuration Error!</strong> The "account" value is not defined for <strong><%= Rails.env %></strong> in your twilio.yml file.</p>
</div>
<% end %>

<% if ENV['TWILIO_NUMBER'].nil? %>
<div class="alert-message error">
  <a class="close" href="#">×</a>
  <p><strong>Configuration Error!</strong> The "phone_number" value is not defined for <strong><%= Rails.env %></strong> in your twilio.yml file.</p>
</div>
<% end %>


<h1>Get the latest tweet from Twitter on your mobile phone!</h1>

<p>
  Enter your phone number in the form below, and
  you'll receive the latest entertaining tweet from Twitter directly 
  to your mobile device.
</p>


<section>
  <div class="input-prepend" id="telephone">
    <span class="add-on">☎</span>
    <input class="xlarge" id="prependedInput" name="prependedInput" size="16" type="text" placeholder="(___) ___-____">
  </div>

  <input type="submit" class="btn primary" value="Sent a tweet to my phone"> &nbsp;
  <button type="reset" class="btn">Cancel</button>
</section>
